@model IEnumerable<KursDB.Models.Inventory>

@{
    ViewData["Title"] = "Инвентарь";
}

<h1>Инвентарь</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>

<table id="inventoryTable" class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ShelfNumber)</th>
            <th>@Html.DisplayNameFor(model => model.RackNumber)</th>
            <th>@Html.DisplayNameFor(model => model.AcquisitionDate)</th>
            <th>@Html.DisplayNameFor(model => model.WriteOffDate)</th>
            <th>@Html.DisplayNameFor(model => model.IsAvailable)</th>
            <th>@Html.DisplayNameFor(model => model.CanTakeHome)</th>
            <th>@Html.DisplayNameFor(model => model.LoanPeriodDays)</th>
            <th>@Html.DisplayNameFor(model => model.Hall)</th>
            <th>@Html.DisplayNameFor(model => model.Library)</th>
            <th>@Html.DisplayNameFor(model => model.Publication)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ShelfNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.RackNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.AcquisitionDate)</td>
                <td>@Html.DisplayFor(modelItem => item.WriteOffDate)</td>
                <td>@Html.DisplayFor(modelItem => item.IsAvailable)</td>
                <td>@Html.DisplayFor(modelItem => item.CanTakeHome)</td>
                <td>@Html.DisplayFor(modelItem => item.LoanPeriodDays)</td>
                <td>@Html.DisplayFor(modelItem => item.Hall.HallNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Library.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Publication.Title)</td>
                <td>
                    <div style="white-space: nowrap">
                    <a asp-action="Edit" asp-route-id="@item.InventoryId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.InventoryId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.InventoryId">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#inventoryTable').DataTable();
        });
    </script>
}
