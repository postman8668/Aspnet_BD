@model IEnumerable<KursDB.Models.Authorship>

@{
    ViewData["Title"] = "Index";
}

<h1>Авторство</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table id="authorshipTable" class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Author)</th>
            <th>@Html.DisplayNameFor(model => model.Work)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Author.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Work.Title)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AuthorshipId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AuthorshipId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AuthorshipId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#authorshipTable').DataTable({
                "searching": true,
                "ordering": true,
                "paging": true
            });
        });
    </script>
}
