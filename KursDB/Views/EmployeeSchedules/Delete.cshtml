@model KursDB.Models.EmployeeSchedule

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="alert alert-warning" role="alert">
    <strong>Warning:</strong> Deleting this employee schedule record will permanently remove all associated data. This action cannot be undone.
</div>
<div>
    <h4>EmployeeSchedule</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Work Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkDate)
        </dd>
        <dt class="col-sm-2">
            Start Time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt class="col-sm-2">
            End Time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndTime)
        </dd>
        <dt class="col-sm-2">
            Employee
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.LastName)
        </dd>
        <dt class="col-sm-2">
            Hall
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hall.HallNumber)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ScheduleId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>