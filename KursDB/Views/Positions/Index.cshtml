@model IEnumerable<KursDB.Models.Position>

@{
    ViewData["Title"] = "Должности";
}

<h1>Должности</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table id="positionTable" class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.PositionName)</th>
            <th>@Html.DisplayNameFor(model => model.Salary)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.PositionName)</td>
                <td>@Html.DisplayFor(modelItem => item.Salary)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PositionId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PositionId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PositionId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#positionTable').DataTable();
        });
    </script>
}
