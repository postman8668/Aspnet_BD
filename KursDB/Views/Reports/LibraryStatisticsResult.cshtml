@using KursDB.Models.ViewModels
@model LibraryStatisticsViewModel

<h2>Результаты статистики библиотеки</h2>

@if (Model != null)
{
    <br />
    <div class="mb-3">
        <a href="@Url.Action("DownloadLibraryStatisticsPdf", new {
            libraryName = Model.LibraryName,
            reportMonth = ViewBag.ReportMonth,
            reportYear = ViewBag.ReportYear
        })" class="btn btn-primary">
            Скачать PDF
        </a>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h3>@Model.LibraryName</h3>
            <h4>Статистика за @ViewBag.ReportMonth/@ViewBag.ReportYear</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Общее количество читателей</h5>
                            <p class="card-text display-4">@Model.TotalReaders</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Новых читателей за месяц</h5>
                            <p class="card-text display-4">@Model.NewReadersThisMonth</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Всего выдач за месяц</h5>
                            <p class="card-text display-4">@Model.TotalLoansThisMonth</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Просроченных выдач</h5>
                            <p class="card-text display-4">@Model.OverdueLoans</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p>Статистика для указанной библиотеки не найдена.</p>
}

<br />
<a asp-action="LibraryStatistics" class="btn btn-secondary">Назад</a>