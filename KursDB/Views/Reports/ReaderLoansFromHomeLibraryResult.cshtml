@using KursDB.Models.ViewModels
@model List<ReaderLoansViewModel>

<h2>Результаты поиска выдач из домашней библиотеки</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Название издания</th>
                <th>Тип издания</th>
                <th>Дата выдачи</th>
                <th>Дата возврата</th>
                <th>Библиотека</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PublicationTitle</td>
                    <td>@item.PublicationType</td>
                    <td>@item.LoanDate.ToShortDateString()</td>
                    <td>@(item.ReturnDate?.ToShortDateString() ?? "Не возвращено")</td>
                    <td>@item.LibraryName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Выдачи из домашней библиотеки не найдены.</p>
}

<a asp-action="ReaderLoansFromHomeLibrary" class="btn btn-secondary">Назад</a>
