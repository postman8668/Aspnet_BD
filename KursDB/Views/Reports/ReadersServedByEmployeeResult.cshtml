@using KursDB.Models.ViewModels
@model List<ReaderServedByEmployeeViewModel>

<h2>Результаты поиска обслуживаний библиотекаря</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ФИО читателя</th>
                <th>Название издания</th>
                <th>Дата выдачи</th>
                <th>Дата возврата</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ReaderName</td>
                    <td>@item.PublicationTitle</td>
                    <td>@item.LoanDate.ToShortDateString()</td>
                    <td>@(item.ReturnDate?.ToShortDateString() ?? "Не возвращено")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Обслуживания указанного библиотекаря не найдены.</p>
}

<a asp-action="ReadersServedByEmployee" class="btn btn-secondary">Назад</a>