@using KursDB.Models.ViewModels
@model List<OverdueLoanViewModel>

<h2>Читатели с просроченными книгами</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ФИО читателя</th>
                <th>Название издания</th>
                <th>Дата выдачи</th>
                <th>Срок возврата</th>
                <th>Дней просрочено</th>
                <th>Библиотека</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ReaderName</td>
                    <td>@item.PublicationTitle</td>
                    <td>@item.LoanDate.ToShortDateString()</td>
                    <td>@item.DueDate.ToShortDateString()</td>
                    <td>@item.DaysOverdue</td>
                    <td>@item.LibraryName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Просроченных выдач не найдено.</p>
}