@using KursDB.Models.ViewModels
@model List<ReaderWithWorkInPeriodViewModel>

<h2>Результаты поиска читателей с произведением в период</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ФИО читателя</th>
                <th>Название издания</th>
                <th>Название произведения</th>
                <th>Дата выдачи</th>
                <th>Дата возврата</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ReaderName</td>
                    <td>@item.PublicationTitle</td>
                    <td>@item.WorkTitle</td>
                    <td>@item.LoanDate.ToShortDateString()</td>
                    <td>@(item.ReturnDate?.ToShortDateString() ?? "Не возвращено")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Читатели с указанным произведением в заданный период не найдены.</p>
}

<a asp-action="ReadersWithWorkInPeriod" class="btn btn-secondary">Назад</a>