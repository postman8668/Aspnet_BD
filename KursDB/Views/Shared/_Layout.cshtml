<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Библиотечная система</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KursDB.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-book-open me-2"></i>Библиотечная система
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Основные сущности -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="coreEntitiesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-database me-1"></i> Данные
                            </a>
                            <ul class="dropdown-menu dropdown-menu-compact" aria-labelledby="coreEntitiesDropdown">
                                <li><h6 class="dropdown-header">Основные</h6></li>
                                <li><a class="dropdown-item" asp-controller="Libraries" asp-action="Index"><i class="fas fa-building me-2"></i>Библиотеки</a></li>
                                <li><a class="dropdown-item" asp-controller="Readers" asp-action="Index"><i class="fas fa-users me-2"></i>Читатели</a></li>
                                <li><a class="dropdown-item" asp-controller="Employees" asp-action="Index"><i class="fas fa-user-tie me-2"></i>Сотрудники</a></li>

                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Фонд</h6></li>
                                <li><a class="dropdown-item" asp-controller="Publications" asp-action="Index"><i class="fas fa-book me-2"></i>Издания</a></li>
                                <li><a class="dropdown-item" asp-controller="Inventories" asp-action="Index"><i class="fas fa-barcode me-2"></i>Инвентарь</a></li>
                                <li><a class="dropdown-item" asp-controller="Loans" asp-action="Index"><i class="fas fa-exchange-alt me-2"></i>Выдачи</a></li>

                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Инфраструктура</h6></li>
                                <li><a class="dropdown-item" asp-controller="Halls" asp-action="Index"><i class="fas fa-door-open me-2"></i>Залы</a></li>
                            </ul>
                        </li>

                        <!-- Справочники -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="referencesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-bookmark me-1"></i> Справочники
                            </a>
                            <ul class="dropdown-menu dropdown-menu-compact" aria-labelledby="referencesDropdown">
                                <li><h6 class="dropdown-header">Классификация</h6></li>
                                <li><a class="dropdown-item" asp-controller="ReaderTypes" asp-action="Index"><i class="fas fa-user-tag me-2"></i>Типы читателей</a></li>
                                <li><a class="dropdown-item" asp-controller="Positions" asp-action="Index"><i class="fas fa-briefcase me-2"></i>Должности</a></li>
                                <li><a class="dropdown-item" asp-controller="HallTypes" asp-action="Index"><i class="fas fa-door-closed me-2"></i>Типы залов</a></li>
                                <li><a class="dropdown-item" asp-controller="PublicationTypes" asp-action="Index"><i class="fas fa-tags me-2"></i>Типы изданий</a></li>

                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Контент</h6></li>
                                <li><a class="dropdown-item" asp-controller="WorkCategories" asp-action="Index"><i class="fas fa-folder me-2"></i>Категории произведений</a></li>
                                <li><a class="dropdown-item" asp-controller="Authors" asp-action="Index"><i class="fas fa-user-edit me-2"></i>Авторы</a></li>
                                <li><a class="dropdown-item" asp-controller="Works" asp-action="Index"><i class="fas fa-book me-2"></i>Произведения</a></li>
                            </ul>
                        </li>

                        <!-- Связи -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="relationsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-link me-1"></i> Связи
                            </a>
                            <ul class="dropdown-menu dropdown-menu-compact" aria-labelledby="relationsDropdown">
                                <li><a class="dropdown-item" asp-controller="Contents" asp-action="Index"><i class="fas fa-list-ol me-2"></i>Содержание</a></li>
                                <li><a class="dropdown-item" asp-controller="Authorships" asp-action="Index"><i class="fas fa-pen-fancy me-2"></i>Авторство</a></li>
                                <li><a class="dropdown-item" asp-controller="EmployeeSchedules" asp-action="Index"><i class="fas fa-calendar-alt me-2"></i>График работы</a></li>
                                <li><a class="dropdown-item" asp-controller="ReaderAttributes" asp-action="Index"><i class="fas fa-id-card me-2"></i>Атрибуты читателей</a></li>
                            </ul>
                        </li>

                        <!-- Отчеты и процедуры -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="reportsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-chart-bar me-1"></i> Отчеты и процедуры
                            </a>
                            <ul class="dropdown-menu dropdown-menu-compact" aria-labelledby="reportsDropdown">
                                <li><h6 class="dropdown-header">Процедуры</h6></li>
                                <!-- 16 процедур -->
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="ReadersByAttributes"><i class="fas fa-user-tag me-2"></i>1. Читатели с характеристиками</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="ReadersWithWork"><i class="fas fa-book me-2"></i>2. Читатели с произведением</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="ReadersWithPublication"><i class="fas fa-book-open me-2"></i>3. Читатели с изданием</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="ReadersWithWorkInPeriod"><i class="fas fa-calendar-check me-2"></i>4. Читатели с изданием за период</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="ReaderLoansFromHomeLibrary"><i class="fas fa-home me-2"></i>5. Выдачи из домашней библиотеки</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="ReaderLoansFromOtherLibraries"><i class="fas fa-exchange-alt me-2"></i>6. Выдачи из других библиотек</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="LoansFromShelf"><i class="fas fa-book me-2"></i>7. Литература с полки</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="ReadersServedByEmployee"><i class="fas fa-user-tie me-2"></i>8. Читатели по библиотекарю</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="EmployeePerformance"><i class="fas fa-chart-line me-2"></i>9. Выработка библиотекарей</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="OverdueLoans"><i class="fas fa-exclamation-triangle me-2"></i>10. Просроченные выдачи</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="AcquiredOrWrittenOffPublications"><i class="fas fa-clipboard-list me-2"></i>11. Поступления/списания</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="EmployeesInHall"><i class="fas fa-door-open me-2"></i>12. Библиотекари в зале</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="InactiveReadersResult"><i class="fas fa-user-clock me-2"></i>13. Неактивные читатели</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="PublicationsWithWork"><i class="fas fa-search me-2"></i>14. Издания с произведением</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="PublicationsByAuthor"><i class="fas fa-user-edit me-2"></i>15. Издания по автору</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="PopularPublications"><i class="fas fa-star me-2"></i>16. Популярные произведения</a></li>

                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Отчеты</h6></li>
                                <!-- 2 отчета -->
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="AuthorBooksInReadingRoom"><i class="fas fa-book-reader me-2"></i>Книги автора в зале</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="LibraryStatistics"><i class="fas fa-chart-pie me-2"></i>Статистика библиотеки</a></li>
                            </ul>
                        </li>
                    </ul>

                    <!-- Пользователь -->
                    @if (ViewBag.Username != null)
                    {
                        <div class="d-flex align-items-center">
                            <span class="navbar-text me-3">
                                <i class="fas fa-user-circle me-1"></i> @ViewBag.Username (@ViewBag.Role)
                            </span>
                            <a class="btn btn-outline-danger btn-sm" asp-controller="Auth" asp-action="Logout">
                                <i class="fas fa-sign-out-alt"></i> Выход
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex align-items-center">
                            <a class="btn btn-outline-primary btn-sm" asp-controller="Auth" asp-action="Logout">
                                <i class="fas fa-sign-in-alt"></i> Выход
                            </a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container glass mt-4" style="overflow:auto">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2025 - Библиотечная система
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
                $(document).ready(function () {
            // Инициализация DataTables только для таблиц
            $('table').each(function () {
                // Проверяем, проинициализирована ли уже таблица
                if ($.fn.dataTable.isDataTable(this)) {
                    $(this).DataTable().destroy(); // Уничтожаем старую инициализацию
                }

                // Инициализируем таблицу заново
                $(this).DataTable({
                    "searching": true,  // Включение поиска по слову
                    "ordering": true,   // Включение сортировки по столбцам
                    "pageLength": 10,   // Количество записей на странице
                    "lengthChange": false, // Отключение изменения количества записей на странице
                });
            });
        });
    </script>
</body>
</html>